{% extends 'template.html.twig' %}
{% block Title %} Forms {% endblock %}



{#{% block PageTitle %}these are the forms{% endblock %}#}


{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th class="col">ID</th>
            <th class="col">UserName</th>
            <th class="col">Email</th>
            <th class="col">Message</th>
            <th class="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for form in forms %}
            <tr>
                <td>{{ form.id }}</td>
                <td>{{ form.UserName }}</td>
                <td>{{ form.Email }}</td>
                <td>{{ form.Message }}</td>
                <td>
                    <a href="{{ path('form.edit',{id:form.id}) }}" class="btn btn-outline-danger">Edit</a>
                    <a href="{{ path('form.delete',{id:form.id}) }}" class="btn btn-danger">Delete</a>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        {% if isPaginated is defined and isPaginated %}
            <div class="row mt-2">
                <nav aria-label="col Page navigation example">
                    <ul class="pagination">
                        {% if page != 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('formulaire', {page: page - 1, nb: nb}) }}">Previous</a></li>
                        {% endif %}
                        {% for i in range(1, nbpages) %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('formulaire', {page: i, nb: nb}) }}">{{ i }}</a>
                            </li>
                        {% endfor %}
                        {% if page != nbpages %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('formulaire', {page: page + 1, nb: nb}) }}">Next</a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        {% endif %}
    </div>
{% endblock %}