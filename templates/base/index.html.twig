{% extends 'base.html.twig' %}

{% block title %}store{% endblock %}

{% block stylesheets %}
    {{ parent() }}
<style>
    h2{
        color: white;
    }
</style>
{% endblock %}

{% block body %}
<section id="products">
    <section id="mproducts" class="section-p1">
        <br>
        <h2>Men's Sportswear</h2>
        <div class="pro-container">
            {% for product in menProducts %}
                <div class="pro">
                    <a href="{{ path('product_details', {'id': product.id}) }}"><img src="{{ product.img }}" alt=""></a>
                    <div class="des">
                        <span>admiral</span>
                        <h5>{{ product.name }}</h5>
                        <div class="star">
                            {% for i in 0..4 %}
                                <i class="fas fa-star"></i>
                            {% endfor %}
                        </div>
                        <h4>&dollar;{{ product.price }}</h4>
                    </div>
                    <a href="{{ path('product_details', {'id': product.id}) }}"><i class="fa-solid fa-cart-shopping"></i></a>
                </div>
            {% endfor %}
        </div>
    </section>
    <section id="mproducts" class="section-p1">
        <br>
        <h2>Women's Sportswear</h2>
