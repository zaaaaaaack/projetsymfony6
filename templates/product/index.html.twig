{% extends 'template.html.twig' %}

{% block Title %}these are the products{% endblock %}


{% block body %}

    <div class="container">
        <a  href="{{ path('product.add') }}" class="btn btn-dark">Add product</a>
        <br><br>

    </div>

    <table class="table">
        <thead>
        <tr>
            <th class="col">ID</th>
            <th class="col">Name</th>
            <th class="col">Description</th>
            <th class="col">Image</th>
            <th class="col">Price</th>
            <th class="col">Quantity</th>
            <th class="col">Category</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td><img src="{{ asset(product.img) }}" height="100px" width="100px"></td>
                <td>{{ product.price }}</td>
                <td>{{ product.quantity }}</td>
                <td>{{ product.category }}</td>
                <td>
                    <a href="{{ path('product.edit',{id:product.id}) }}" class="btn btn-outline-danger">Edit</a>
                    <a href="{{ path('product.delete',{id:product.id}) }}" class="btn btn-danger">Delete</a>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        {% if isPaginated is defined and isPaginated %}
            <div class="row mt-2">
                <nav aria-label="col Page navigation example">
                    <ul class="pagination">
                        {% if page != 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('product', {page: page - 1, nb: nb}) }}">Previous</a></li>
                        {% endif %}
                        {% for i in range(1, nbpages) %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('product', {page: i, nb: nb}) }}">{{ i }}</a>
                            </li>
                        {% endfor %}
                        {% if page != nbpages %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('product', {page: page + 1, nb: nb}) }}">Next</a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        {% endif %}
    </div>
{% endblock %}


